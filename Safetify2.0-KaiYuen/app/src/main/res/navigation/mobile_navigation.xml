<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_greetings">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.safetify_test.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_routes"
        android:name="com.example.safetify_test.ui.routes.RoutesFragment"
        android:label="@string/title_routes"
        tools:layout="@layout/fragment_routes" />

    <fragment
        android:id="@+id/navigation_alarm"
        android:name="com.example.safetify_test.ui.alarm.AlarmFragment"
        android:label="@string/title_alarm"
        tools:layout="@layout/fragment_alarm" />
    <fragment
        android:id="@+id/navigation_call"
        android:name="com.example.safetify_test.ui.call.CallFragment"
        android:label="fragment_call"
        tools:layout="@layout/fragment_call" />
    <fragment
        android:id="@+id/navigation_guides"
        android:name="com.example.safetify_test.ui.guides.GuidesFragment"
        android:label="fragment_guides"
        tools:layout="@layout/fragment_guides" />
     <navigation android:id="@+id/navigation_greetings"
        app:startDestination="@id/greeting1Fragment">
        <fragment
            android:id="@+id/greeting2Fragment"
            android:name="com.example.safetify_test.ui.greetings.Greeting2Fragment"
            android:label="fragment_greeting2"
            tools:layout="@layout/fragment_greeting2" >
            <action
                android:id="@+id/action_greeting2Fragment_to_greeting3Fragment2"
                app:destination="@id/greeting3Fragment" />
        </fragment>
        <fragment
            android:id="@+id/greeting1Fragment"
            android:name="com.example.safetify_test.ui.greetings.Greeting1Fragment"
            android:label="fragment_greeting1"
            tools:layout="@layout/fragment_greeting1">
            <action
                android:id="@+id/action_greeting1Fragment_to_greeting2Fragment2"
                app:destination="@id/greeting2Fragment"
                app:enterAnim="@anim/nav_default_pop_enter_anim" />
        </fragment>
        <fragment
            android:id="@+id/greeting3Fragment"
            android:name="com.example.safetify_test.ui.greetings.Greeting3Fragment"
            android:label="fragment_greeting3"
            tools:layout="@layout/fragment_greeting3" >
            <action
                android:id="@+id/action_greeting3Fragment_to_greeting2Fragment"
                app:destination="@id/greeting2Fragment" />
            <action
                android:id="@+id/action_greeting3Fragment_to_greeting4Fragment2"
                app:destination="@id/greeting4Fragment" />
        </fragment>
        <fragment
            android:id="@+id/greeting4Fragment"
            android:name="com.example.safetify_test.ui.greetings.Greeting4Fragment"
            android:label="fragment_greeting4"
            tools:layout="@layout/fragment_greeting4" >
            <action
                android:id="@+id/action_greeting4Fragment_to_greeting3Fragment"
                app:destination="@id/greeting3Fragment" />
            <action
                android:id="@+id/action_greeting4Fragment_to_greeting5Fragment"
                app:destination="@id/greeting5Fragment" />
        </fragment>
         <fragment
             android:id="@+id/greeting5Fragment"
             android:name="com.example.safetify_test.ui.greetings.Greeting5Fragment"
             android:label="fragment_greeting5"
             tools:layout="@layout/fragment_greeting5" >
             <action
                 android:id="@+id/action_greeting5Fragment_to_greeting4Fragment"
                 app:destination="@id/greeting4Fragment" />
             <action
                 android:id="@+id/action_greeting5Fragment_to_greeting6Fragment"
                 app:destination="@id/greeting6Fragment" />
         </fragment>
         <fragment
             android:id="@+id/greeting6Fragment"
             android:name="com.example.safetify_test.Greeting6Fragment"
             android:label="fragment_greeting6"
             tools:layout="@layout/fragment_greeting6" >
             <action
                 android:id="@+id/action_greeting6Fragment_to_greeting5Fragment"
                 app:destination="@id/greeting5Fragment" />
         </fragment>
     </navigation>
</navigation>