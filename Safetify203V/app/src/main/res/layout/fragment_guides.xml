<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuidesFragment">


    <TextView
        android:id="@+id/Guides"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/intersemibold"
        android:gravity="center"
        android:text="Guides"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Guides"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppinsregular"
        android:text="Step-by-step instructions "
        android:textColor="@color/greyDark"
        android:textSize="15sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Guides" />

    <!--GROUP FOR SEARCH BAR AND FILTER -->
    <LinearLayout
        android:id="@+id/groupsearchbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Step"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Step">

        <EditText
            android:id="@+id/searchbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Step"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginTop="10dp"
            android:background="@drawable/searchbar" />

        <ImageView
            android:id="@+id/searchicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/searchicon" />

        <ImageView
            android:id="@+id/filtericon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:src="@drawable/filtericon" />

    </LinearLayout>

    <!-- 1st box -->
    <ImageView
        android:id="@+id/Box1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupsearchbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/boxguides"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupsearchbar" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/flowericon"
        app:layout_constraintBottom_toBottomOf="@+id/Box1"
        app:layout_constraintEnd_toEndOf="@+id/Box1"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="@+id/Box1"
        app:layout_constraintTop_toTopOf="@+id/Box1"
        app:layout_constraintVertical_bias="0.533" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="HOW TO KEEP CALM DURING INTENSE MOMENTS"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/Box1"
        app:layout_constraintHorizontal_bias="0.617"
        app:layout_constraintStart_toStartOf="@+id/Box1"
        app:layout_constraintTop_toTopOf="@+id/Box1" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Pages: 2"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/Box1"
        app:layout_constraintEnd_toEndOf="@+id/Box1"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="@+id/Box1"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.176" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/downloadicon"
        app:layout_constraintBottom_toBottomOf="@+id/Box1"
        app:layout_constraintEnd_toEndOf="@+id/Box1"
        app:layout_constraintHorizontal_bias="0.962"
        app:layout_constraintStart_toStartOf="@+id/Box1"
        app:layout_constraintTop_toTopOf="@+id/Box1"
        app:layout_constraintVertical_bias="0.533" />

    <!-- 2nd box -->
    <ImageView
        android:id="@+id/Box2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupsearchbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/boxguides"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Box1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="254dp"
        android:layout_marginBottom="19dp"
        android:src="@drawable/brainicon"
        app:layout_constraintBottom_toBottomOf="@+id/Box2"
        app:layout_constraintEnd_toEndOf="@+id/Box2"
        app:layout_constraintStart_toStartOf="@+id/Box2"
        app:layout_constraintTop_toTopOf="@+id/Box2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="71dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="SAFETY PRACTICES YOU SHOULD REMEMBER"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/Box2"
        app:layout_constraintTop_toTopOf="@+id/Box2" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="71dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="19dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Pages: 2"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/Box2"
        app:layout_constraintEnd_toEndOf="@+id/Box2"
        app:layout_constraintStart_toStartOf="@+id/Box2"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="256dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="19dp"
        android:src="@drawable/downloadicon"
        app:layout_constraintBottom_toBottomOf="@+id/Box2"
        app:layout_constraintEnd_toEndOf="@+id/Box2"
        app:layout_constraintStart_toEndOf="@+id/Box2"
        app:layout_constraintStart_toStartOf="@+id/Box2"
        app:layout_constraintTop_toTopOf="@+id/Box2" />

    <!-- 3rd box -->
    <ImageView
        android:id="@+id/Box3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupsearchbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/boxguides"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Box2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="254dp"
        android:layout_marginBottom="17dp"
        android:src="@drawable/brainicon"
        app:layout_constraintBottom_toBottomOf="@+id/Box3"
        app:layout_constraintEnd_toEndOf="@+id/Box3"
        app:layout_constraintStart_toStartOf="@+id/Box3"
        app:layout_constraintTop_toTopOf="@+id/Box3" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="71dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="44dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="WHAT TO DO WHEN SOMEONE IS FOLLOWING YOU"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/Box3"
        app:layout_constraintStart_toStartOf="@+id/Box3"
        app:layout_constraintTop_toTopOf="@+id/Box3" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="71dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="21dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Pages: 2"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/Box3"
        app:layout_constraintEnd_toEndOf="@+id/Box3"
        app:layout_constraintStart_toStartOf="@+id/Box3"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="258dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/downloadicon"
        app:layout_constraintBottom_toBottomOf="@+id/Box3"
        app:layout_constraintEnd_toEndOf="@+id/Box3"
        app:layout_constraintStart_toStartOf="@+id/Box3"
        app:layout_constraintTop_toTopOf="@+id/Box3" />

    <!-- 4th box -->

    <ImageView
        android:id="@+id/Box4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupsearchbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/boxguides"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Box3"
        app:layout_constraintVertical_bias="0.013" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/muscleicon"
        app:layout_constraintBottom_toBottomOf="@+id/Box4"
        app:layout_constraintEnd_toEndOf="@+id/Box4"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="@+id/Box4"
        app:layout_constraintTop_toTopOf="@+id/Box4" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="71dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="44dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="EASY AND SIMPLE SELF-DEFENSE PRACTICES"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/Box4"
        app:layout_constraintStart_toStartOf="@+id/Box4"
        app:layout_constraintTop_toTopOf="@+id/Box4" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="198dp"
        android:layout_height="12dp"
        android:layout_marginStart="71dp"
        android:layout_marginEnd="46dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Pages: 2"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/Box4"
        app:layout_constraintEnd_toEndOf="@+id/Box4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Box4"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/downloadicon"
        app:layout_constraintBottom_toBottomOf="@+id/Box4"
        app:layout_constraintEnd_toEndOf="@+id/Box4"
        app:layout_constraintHorizontal_bias="0.969"
        app:layout_constraintStart_toStartOf="@+id/Box4"
        app:layout_constraintTop_toTopOf="@+id/Box4"
        app:layout_constraintVertical_bias="0.366" />


</androidx.constraintlayout.widget.ConstraintLayout>

