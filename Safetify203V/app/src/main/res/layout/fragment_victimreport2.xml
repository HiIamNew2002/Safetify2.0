<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />

    <TextView
        android:id="@+id/victim2heading"
        style="@style/Heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Victim Report"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/type"
        android:fontFamily="@font/poppins_bold"
        android:text="Report Type"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/type"
        app:layout_constraintStart_toStartOf="@+id/type" />

    <EditText
        android:id="@+id/type"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/victim2heading"
        android:layout_centerHorizontal="true"
        android:background="@drawable/formbg"
        android:fontFamily="@font/poppins"
        android:hint="Please Select"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textSize="15dp"
        android:layout_marginTop="40dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/victim2heading" /> <!-- need function-->

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/duration"
        android:fontFamily="@font/poppins_bold"
        android:text="Duration"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/duration"
        app:layout_constraintStart_toStartOf="@+id/duration" />

    <EditText
        android:id="@+id/duration"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/type"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:layout_constraintHorizontal_bias="0.5"
        android:background="@drawable/formbg"
        android:inputType="date"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/type" />

    <TextView
        android:id="@+id/evidesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/evidence"
        android:fontFamily="@font/poppins_bold"
        android:text="Evidence"
        android:textSize="15dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toTopOf="@+id/evidence"
        app:layout_constraintStart_toStartOf="@+id/evidence" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/evidence"
        android:layout_toRightOf="@id/evidesc"
        android:fontFamily="@font/poppins_bold"
        android:text="(MP3/MP4/JPG/PNG)"
        android:textColor="#7F7F7F"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/evidence"
        app:layout_constraintStart_toEndOf="@+id/evidesc" />

    <EditText
        android:id="@+id/evidence"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/duration"
        android:layout_centerHorizontal="true"
        android:background="@drawable/formbg"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:layout_marginTop="40dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/duration" /> <!-- amend to attachement type-->

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/description"
        android:fontFamily="@font/poppins_bold"
        android:text="Description"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/description"
        app:layout_constraintStart_toStartOf="@+id/description" />

    <EditText
        android:id="@+id/description"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_below="@id/evidence"
        android:layout_centerHorizontal="true"
        android:background="@drawable/formbg"
        android:inputType="date"
        android:paddingLeft="10dp"
        android:layout_marginTop="40dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/evidence" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/appCompatButton2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/green"
        android:fontFamily="@font/poppins_bold"
        android:text="Submit"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description" />
</androidx.constraintlayout.widget.ConstraintLayout>