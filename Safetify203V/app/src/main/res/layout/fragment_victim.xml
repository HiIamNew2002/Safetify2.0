<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".VictimFragment">

        <ImageButton
            android:id="@+id/btnBack1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.07"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.07"/>

        <TextView
            android:id="@+id/victimheading"
            style="@style/Heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Victim Report"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/first_name_input"
            android:fontFamily="@font/poppins_bold"
            android:text="First Name"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/first_name_input"
            app:layout_constraintStart_toStartOf="@+id/first_name_input" />

        <EditText
            android:id="@+id/first_name_input"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@id/victimheading"
            android:layout_centerHorizontal="true"
            android:background="@drawable/formbg"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/victimheading" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/last_name_input"
            android:fontFamily="@font/poppins_bold"
            android:text="Last Name"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/last_name_input"
            app:layout_constraintStart_toStartOf="@+id/last_name_input" />

        <EditText
            android:id="@+id/last_name_input"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@id/first_name_input"
            android:layout_centerHorizontal="true"
            android:background="@drawable/formbg"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/first_name_input" />

        <!-- Gender -->
        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/gender"
            android:fontFamily="@font/poppins_bold"
            android:text="Gender"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/gender"
            app:layout_constraintStart_toStartOf="@+id/gender" /><!-- change to option-->

        <EditText
            android:id="@+id/gender"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_below="@id/last_name_input"
            android:layout_marginTop="40dp"
            android:background="@drawable/formbg"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ethnic"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/last_name_input" />

        <!-- Ethnicity -->
        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/ethnic"
            android:fontFamily="@font/poppins_bold"
            android:text="Ethnicity"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/ethnic"
            app:layout_constraintStart_toStartOf="@+id/ethnic" /> <!-- change to option-->

        <EditText
            android:id="@+id/ethnic"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_below="@id/last_name_input"
            android:layout_marginTop="40dp"
            android:background="@drawable/formbg"
            android:inputType="text"
            app:layout_constraintStart_toEndOf="@id/gender"
            app:layout_constraintTop_toBottomOf="@+id/last_name_input"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Nationality -->
        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/nation"
            android:fontFamily="@font/poppins_bold"
            android:text="Nationality"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/nation"
            app:layout_constraintStart_toStartOf="@+id/nation" />

        <EditText
            android:id="@+id/nation"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_below="@id/ethnic"
            android:background="@drawable/formbg"
            android:layout_marginTop="40dp"
            app:layout_constraintHorizontal_bias="0.5"
            android:inputType="text"
            app:layout_constraintEnd_toStartOf="@id/phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gender" />

        <!-- Phone Number -->
        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/phone"
            android:fontFamily="@font/poppins_bold"
            android:text="Phone"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/phone"
            app:layout_constraintStart_toStartOf="@+id/phone" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_below="@id/ethnic"
            android:background="@drawable/formbg"
            android:inputType="text"
            android:layout_marginTop="40dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/nation"
            app:layout_constraintTop_toBottomOf="@+id/ethnic" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/address"
            android:fontFamily="@font/poppins_bold"
            android:text="Address"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/address"
            app:layout_constraintStart_toStartOf="@+id/address" />

        <EditText
            android:id="@+id/address"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@id/nation"
            android:layout_centerHorizontal="true"
            android:background="@drawable/formbg"
            android:inputType="text"
            android:layout_marginTop="40dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phone"/>

        <!-- IC Number -->
        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/ic_number"
            android:fontFamily="@font/poppins_bold"
            android:text="IC Number"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/ic_number"
            app:layout_constraintStart_toStartOf="@+id/ic_number" />

        <EditText
            android:id="@+id/ic_number"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@id/address"
            android:layout_centerHorizontal="true"
            android:background="@drawable/formbg"
            android:inputType="text"
            android:layout_marginTop="40dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/address"/>

        <!-- Date -->
        <DatePicker
            android:id="@+id/date_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="50dp"
            android:paddingVertical="10dp"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="@+id/ic_number"
            app:layout_constraintStart_toStartOf="@+id/ic_number"
            app:layout_constraintTop_toBottomOf="@+id/ic_number"/>

        <!-- Time -->
        <TimePicker
            android:id="@+id/time_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="55dp"
            android:paddingVertical="10dp"
            app:layout_constraintEnd_toEndOf="@+id/date_picker"
            app:layout_constraintStart_toStartOf="@+id/date_picker"
            app:layout_constraintTop_toBottomOf="@+id/date_picker"/>

        <!-- Location -->
        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/locationInput"
            android:fontFamily="@font/poppins_bold"
            android:text="Location"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/locationInput"
            app:layout_constraintStart_toStartOf="@+id/locationInput" />

        <EditText
            android:id="@+id/locationInput"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@id/time_picker"
            android:layout_centerHorizontal="true"
            android:background="@drawable/formbg"
            android:inputType="text"
            android:layout_marginTop="40dp"
            android:hint="Location of the incident"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/time_picker"/>

        <!-- Description -->
        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/description_input"
            android:fontFamily="@font/poppins_bold"
            android:text="Description"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/description_input"
            app:layout_constraintStart_toStartOf="@+id/description_input" />

        <EditText
            android:id="@+id/description_input"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_below="@id/locationInput"
            android:layout_centerHorizontal="true"
            android:background="@drawable/formbg"
            android:inputType="text"
            android:layout_marginTop="40dp"
            android:hint="Provide a brief description of the incident"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/locationInput"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmit"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/squaregradient"
            android:fontFamily="@font/poppins_bold"
            android:text="Submit"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:layout_marginBottom="110dp"
            android:layout_marginTop="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_input" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>